package datastructures;

public class Arrays {

	public static void main(String[] args) {
		String [] alphabet = {"a","b","c","d","e","f"};
	
		System.out.println("using old fashion way");
		try {
		for (int i=0; i<7; i++) {
			System.out.print(alphabet[i] +" ");
		}
		}catch (ArrayIndexOutOfBoundsException e) 
			{
			System.out.println(e);
			System.out.println("out of bound array boundary");
			}
		
		System.out.println();

		System.out.println("using for each method");
		for (String i : alphabet) {
			System.out.print(i +" ");
		}
		System.out.println();
		
		System.out.println("using Array length");
		for (int i=0; i<alphabet.length; i++) {
			System.out.print(alphabet[i] +" ");
		}
		System.out.println();

		String[][] users = {
							{"John","Williams", "jwilliams@testmail.com"},
							{"rami","Levi","rami@testmail.com"},
							{"kobi", "duvel", "kduvel@testmail.com"}
		};
		
	 int numsUsers = users.length ;
	 int numField = users[0].length;
	 System.out.println(numsUsers);
	 System.out.println(numField);

		
		
		
		
	}

}
