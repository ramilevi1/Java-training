package basics;

public class Lab1 {
	public static void main (String[] args ) {
		sum(5);
		System.out.println("factorial: " + fact(5));
	}

	public static int sum(int n) {
		int sum= 0;
		for (int i = 1; i <=n; i++) {
			System.out.print(sum + " + " + i);
			sum = sum+i;
			System.out.println (" = " + sum);
				}
		return sum;
		}

	public static int fact(int n) {
		if (n==0) {
			return 1;
		}
		return fact(n-1)*n;
	}


}



