package basics;

public class Days {
	public static void main (String[] args) {
		//exe diff block of code based on value of condition
		String dayOfWeek = "Tuesday";
		
		switch (dayOfWeek) {
		case "Monday" : 
			System.out.println("Today is Monday");
		case "Tuesday" : 
			System.out.println("Today is Monday");
			
		
		
		
		
		
		
		
		}
	}
}
